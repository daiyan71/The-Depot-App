<article>
    <% if notice %>
        <aside id="notice"><%= notice %></aside>
    <% end %>
    <% unless cart.line_items.empty? %>
    <h2>Your Cart</h2>
    <table>
    <%= render(cart.line_items) %>
        <tfoot>
            <tr>
                <th colspan="2">Total:</th>
                <td class="price"><%= number_to_currency(cart.total_price) %></td>
            </tr>
        </tfoot>
    </table>
    <div class="actions" style="display:flex">
    <%= button_to 'Empty cart', cart,class:"btn btn-warning", style: "margin-right:15px",
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
    <% if session['inCheckout']==0 %>
    <%= button_to 'Checkout', new_order_path,
    method: :get,
    class: "checkout btn btn-success"%>
    </div>
    <% end %>
    <% end %>
</article>